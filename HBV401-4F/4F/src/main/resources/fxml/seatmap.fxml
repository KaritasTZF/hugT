         <Button text="" GridPane.columnIndex="4" GridPane.rowIndex="7"/>
         <Button text="" GridPane.columnIndex="4" GridPane.rowIndex="8"/>
         <Button text="" GridPane.columnIndex="4" GridPane.rowIndex="9"/>
       </children>
    </GridPane>
    
    <HBox spacing="10">
        <Button fx:id="saveButton" text="Vista val" onAction="#handleSave"/>
        <Button fx:id="exitButton" text="Til baka" onAction="#handleExit"/>
    </HBox>
</VBox>
